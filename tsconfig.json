{
  "compilerOptions": {

 

    "outDir": "./dist",
    "rootDir": "./src",
 
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2016",
    "module": "commonjs",                               
    
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                   
                      
    "skipLibCheck": true                                
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

